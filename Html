<script>
// Add functionality to the statistics button
document.getElementById('statistic-button').addEventListener('click', function() {
    const countElement = document.getElementById('statistic-count');
    const updateElement = document.getElementById('statistic-update');
    
    // Animate the number increment (basic simulation for engagement)
    let currentCount = 49000000;
    const targetCount = 49600000; // Example increment for simulation
    const increment = 1000;
    const speed = 30; // Speed of increment animation
    
    const animateCount = setInterval(() => {
        if (currentCount < targetCount) {
            currentCount += increment;
            countElement.textContent = currentCount.toLocaleString();
        } else {
            clearInterval(animateCount);
            updateElement.style.display = 'block'; // Show updated statistics text
        }
    }, speed);
});

</script> 




<script>
// Theme toggle function
function toggleDarkMode() {
    document.body.classList.toggle('dark-mode');
}

// Petition signature count and list update
document.getElementById('petition-form').addEventListener('submit', function(e) {
    e.preventDefault();
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();

    if (name && email && validateEmail(email)) {
        addSignature(name);
        document.getElementById('name').value = '';
        document.getElementById('email').value = '';
    } else {
        alert('Please enter a valid name and email.');
    }
});

// Simple email validation function
function validateEmail(email) {
    const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return regex.test(email);
}

// Add signature and update count
function addSignature(name) {
    const list = document.getElementById('signature-list');
    const item = document.createElement('li');
    item.textContent = name;
    list.appendChild(item);

    const count = document.getElementById('signature-count');
    count.textContent = parseInt(count.textContent) + 1;
}

// Scroll reveal for elements with the revealable class
const revealables = document.querySelectorAll('.revealable');
window.addEventListener('scroll', () => {
    revealables.forEach(el => {
        const top = el.getBoundingClientRect().top;
        if (top < window.innerHeight - 50) {
            el.classList.add('active');
        }
    });
});
</script>
